<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:contentDescription="Material News"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/splash_image"
        android:scaleType="centerCrop"
        android:src="@drawable/newsicon"
        android:layout_width="250dp"
        android:layout_height="250dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/dev_name"
        android:textSize="20sp"
        android:textColor="@color/grey_800"
        android:layout_below="@id/splash_image"
        android:layout_centerHorizontal="true"
        android:text="Made by Aditya Kulkarni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:ignore="MissingPrefix"
        fontPath="@string/font_awesome"
        android:id="@+id/github_link"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        android:textColor="@color/grey_700"
        android:layout_below="@id/dev_name"
        android:layout_centerHorizontal="true"
        android:text="@string/fa_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newsAPILink"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#2196f3"
        android:text="API provided by newsapi.org"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/newsAPILink"
        android:id="@+id/icon_help_text"
        android:textSize="16sp"
        android:textColor="@color/grey_800"
        android:layout_centerHorizontal="true"
        android:text="Thanks to Vinay Ambre for the app icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
